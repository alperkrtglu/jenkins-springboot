@Library('jte-example') _

pipeline {
  agent any
    environment {
        ADIM = "ALPER"
    }
  triggers {
    cron('0 10 * * *')
  }
  stages {
    stage('Checkout') {
      steps {
       checkout scm
      }
    }

    stage('Hello') {
      steps {
        helloProject('Alper')
      }
    }

    stage('Clean') {
      steps {
        cleanProject()
      }
    }

    stage('Build') {
      steps {
        buildProject()
      }
    }

        stage('Deneme') {
                        steps {
                                    denemeProject(isim: ADIM)

                        }
        }

    stage('Trigger-Project') {
      steps {
        triggerProject()
        sh "echo ISIM: ${ADIM}"
      }
    }

  }
}