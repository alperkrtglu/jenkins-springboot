@Library('jte-example') _

pipeline {
  agent any
    environment {
        ADIM = "ALPER"
        IS_CRON_JOB = "${currentBuild.rawBuild.getCause(hudson.triggers.TimerTrigger.TimerTriggerCause) != null ? 'true' : 'false'}"
        timestampVersion = sh(script: "date -d @\$(date +%s) +'%Y-%m-%dT%H-%M-%SZ'", returnStdout: true).trim()
    }
  triggers {
    cron('0 10 * * *')
  }
  stages {
    stage('Checkout') {
      steps {
       checkout scm
      }
    }

    stage('Hello') {
      steps {
        helloProject('Alper')
      }
    }

    stage('Clean') {
      steps {
        cleanProject()
      }
    }

    stage('Build') {
      steps {
        buildProject()
      }
    }

        stage('Deneme') {
                        steps {
                                    denemeProject(isim: ADIM)

                        }
        }

    stage('Trigger-Project') {
      steps {
        triggerProject(isCronJob: IS_CRON_JOB, timestampVersion: timestampVersion)
        sh "echo ISIM: ${ADIM}"
      }
    }

  }
}